<UserControl x:Class="OnSiteCompanion.uiInfoTileLineItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnSiteCompanion"
             mc:Ignorable="d" 
             Margin="0,0,0,0">
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="txtSummary" VerticalAlignment="Bottom"  FontSize="20" Margin="0,0,0,0" Foreground="#a0a0a0" FontWeight="Heavy"></TextBlock>
        <TextBlock x:Name="txtDetail" VerticalAlignment="Bottom"  FontSize="14" Margin="5,0,0,3" Foreground="#a0a0a0"  FontWeight="Heavy"></TextBlock>
    </StackPanel>
</UserControl>
