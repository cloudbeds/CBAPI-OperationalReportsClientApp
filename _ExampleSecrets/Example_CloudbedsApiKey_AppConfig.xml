<?xml version="1.0" encoding="utf-8"?>
<Configuration>
  
    <!--========================================================================================================================= 
        clientId : Does not matter
        authMode : We are using an API access token (not OAuth)
        secret   : The secret given to you by the Cloudbeds API Access UI
        propertyId : Explicit Cloudbeds Property ID (Optional, but recommended.  Can be taken from browser URL)
        name: Friendly Name of the property to show in the application UI (Can be anything)
        =========================================================================================================================-->
    <CloudbedsApp  serverUrl="https://hotels.cloudbeds.com" authMode="ApiAccessKey" propertyId="123propertyid123"  clientId="Does Not Matter" secret="****SecretGoesHere****" name="my hotel name"/>

</Configuration>
